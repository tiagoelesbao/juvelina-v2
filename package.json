{
  "name": "juvelina-organics",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "ANALYZE=true vite build",
    "build:prod": "npm run clean && tsc && vite build && npm run optimize",
    "optimize": "npm run optimize:images && npm run optimize:pwa",
    "optimize:images": "node scripts/optimize-images.js",
    "optimize:pwa": "workbox generateSW workbox-config.js",
    "clean": "rimraf dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lighthouse": "lighthouse http://localhost:4173 --view --preset=desktop",
    "lighthouse:mobile": "lighthouse http://localhost:4173 --view --preset=mobile"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.50",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "lighthouse": "^11.5.0",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^1.2.2",
    "workbox-cli": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "last 2 versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}